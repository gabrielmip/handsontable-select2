{
  "name": "@project-kit/handsontable-select2",
  "version": "1.0.0-rc.1",
  "description": "Handsontable cell based on select2",
  "homepage": "https://github.com/project-kit/handsontable-select2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/project-kit/handsontable-select2.git"
  },
  "author": {
    "name": "Oleksandr Dakal",
    "email": "oleksandr-dakal@project-kit.org"
  },
  "bugs": {
    "url": "https://github.com/project-kit/handsontable-select2/issues",
    "email": "bugs@project-kit.org"
  },
  "keywords": [
    "handsontable",
    "integration",
    "renderer",
    "select2",
    "editor",
    "cell"
  ],
  "files": [
    "cjs",
    "es",
    "es2015",
    "library"
  ],
  "main": "cjs/ht-select2.js",
  "module": "es/ht-select2.js",
  "typings": "typing/index.d.ts",
  "devDependencies": {
    "@types/jquery": "^3.3.5",
    "@types/node": "^10.5.2",
    "@types/select2": "^4.0.47",
    "autoprefixer": "^9.0.1",
    "cross-env": "^5.2.0",
    "handsontable": "^5.0.0",
    "jquery": "^3.3.1",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "precss": "^3.1.2",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.4",
    "rollup-plugin-auto-external": "^1.2.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-generate-html-template": "^1.1.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.16.1",
    "select2": "^4.0.5",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-consistent-codestyle": "^1.13.2",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-microsoft-contrib": "^5.1.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "@types/jquery": "<=3.x",
    "@types/select2": ">=4.x",
    "handsontable": ">=0.22",
    "jquery": "<=3.x",
    "select2": ">=4.x"
  },
  "scripts": {
    "lint": "tslint -t codeFrame -p tsconfig.json",
    "clear:dir": "cross-env-shell rimraf $DIR",
    "clear:typing": "cross-env-shell rimraf typing",
    "pre:rollup": "tsc -p tsconfig.rollup.json",
    "pre:css": "cross-env-shell postcss -u autoprefixer precss -o $DIR/ht-select2.css library/css/*",
    "build:cjs": "cross-env DIR=cjs run-s clear:* pre:* && rollup -c rollup.config.prod.js",
    "build:es": "cross-env DIR=es run-s clear:* pre:* && tsc -p tsconfig.prod.json --outDir es",
    "build:es2015": "cross-env DIR=es2015 run-s clear:* pre:* && tsc -p tsconfig.prod.json -t es2015 --outDir es2015",
    "build": "cross-env DIR=tmp run-s clear:dir && run-s build:e* build:cjs",
    "start": "cross-env DIR=tmp run-s clear:dir && run-s pre:rollup && rollup -w -c rollup.config.dev.js"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "config": {
    "entry": "library/index.ts",
    "es2015": "es2015/ht-select2.js"
  }
}
